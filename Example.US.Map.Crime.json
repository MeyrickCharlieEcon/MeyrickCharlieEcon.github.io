{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 500,


  
"data": {
  "url": "https://raw.githubusercontent.com/MeyrickCharlieEcon/MeyrickCharlieEcon.github.io/main/GeoUSStates.json",
  "format": {
 
    "property": "features"
    
    }
},

"projection": {"type": "albersUsa"},


"transform": [

{
  "lookup": "properties.NAME",
  "from":
  { 
    "data": {"url": "https://raw.githubusercontent.com/MeyrickCharlieEcon/MeyrickCharlieEcon.github.io/main/dataUSstatesCrimeWide.csv"},
    "key": "State",
    "fields": ["Arson"]
    }
  
  }

],

"mark": {
  "type": "geoshape", 
  
  "strokeWidth": 1
  
  },

  "encoding": {

  "color": {
    "field": "Arson",
    "type": "quantitative"}
  ,
  
  "tooltip": [
    {"field": "properties.NAME", "type": "nominal", "title": "State"},
    {"field": "Arson", "type": "quantitative"}
]
  
  }
  

  

}